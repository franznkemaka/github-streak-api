{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es6"
        ],
        "esModuleInterop": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
